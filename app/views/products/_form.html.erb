<%= simple_form_for @product,:html => {:multipart => true} do |f|%>
  <%= f.input :title, label: "Product Title"%>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :discount %>
  <%= f.input :available %>
  <%= f.input :category_id, collection: Category.get_parents ,placeholder:"sds"%>
  <%= f.file_field :image, as: :file%>
  <%= f.button :submit %>
<% end %>
