<div class="container">
  <div class="row">
    <div class="col-sm-3">
        <hr>
        <h3 class="font-weight-bold">
          <strong >SHOP</strong>
        </h3>
        <hr>
        <ul class="nav nav-navbar nav-stacked">
          <li class="active"><a href="products#index">All Products</a></li>
          <li class="dropdown">
            <% Category.get_parents.each do |category| %>

                <%= link_to category.title, products_path(category: category.title),class:"link"%>

              <% end %>

          </li>
        </ul>
    </div>

    <div class="col-sm-9">
      <div class="row">
        <h1 >
          <strong>
            All Products
          </strong>
        </h1>
      </div>
      <% @products.each do |product| %>
        <div class="col-xs-6 col-sm-4">
            <div class="thumbnail">
              <a  class = "" href = "<%= product_path(product)%>">
              <img src="<%= product.image %>" alt="Product" style="width:100%">
              <div class="caption">
                <h3>Here have to be name</h3>
                <div class="row">
                  <% if product.discount!=0 %>
                    <div class="col-sm-6">
                      $ <del><%= product.price%></del>
                      <strong>$ <%= product.price*(1-(product.discount/100))%></strong>
                    </div>
                    <div class="col-sm-6">

                      Discount: <%= product.discount%>%

                    </div>
                  <% else %>
                  <strong>
                    <div class="col-sm-12">
                      $ <%= product.price %>
                    </div>
                  </strong>
                  <% end %>
                </div>
              </div>
            </div>
          </a>
        </div>

      <% end %>
    </div>
  </div>
</div>
